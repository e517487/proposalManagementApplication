    <!--
        Added the entity Adres.
    -->
    <changeSet id="20180702213748-1" author="jhipster">
        <createTable tableName="adres" remarks="not an ignored comment">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="volgnummer" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="soort_adres" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="straat_naam" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="huis_nr" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="plaats_naam" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="postcode" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="land" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="fdn_aanvrager_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
